set $menu wofi --show run
set $term alacritty
set $mod mod4
set $left h
set $down j
set $up k
set $right l

# Quit Sway
bindsym $mod+Shift+q exec swaymsg exit

output * {
	resolution 3840x2160 scale 1.5
	bg #000000 solid_color
}

input type:touchpad {
	natural_scroll enabled
	scroll_factor 0.6
}

# lock
bindsym $mod+Escape exec swaylock
exec swayidle -w \
	timeout 300 swaylock \
	timeout 360 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"'

# open a new terminal on startup
exec $term

# start waybar on startup
exec waybar

# mod + enter to show menu
bindsym $mod+Return exec $menu

default_border pixel

# xwayland hidpi support
xwayland force scale 2
exec xsettingsd

#                       border  bg      text    indi    child
client.focused          #000000 #000000 #000000 #054280 #054280
client.focused_inactive #000000 #000000 #000000 #000000 #333333
client.unfocused        #000000 #000000 #000000 #000000 #333333

gaps {
	outer 0
	inner 2
}

# open new terminal
bindsym $mod+t exec alacritty --working-directory="$(swaycwd)"

bindsym $mod+u focus parent
bindsym $mod+v splitv
bindsym $mod+b splith
bindsym $mod+g layout toggle split
bindsym $mod+q kill

# Audio control
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%

# Media control
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next

# Reload the configuration file
bindsym $mod+r reload

# Change the current focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move the current focus
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Resize the current focus
bindsym $mod+Ctrl+$left resize shrink width 20px
bindsym $mod+Ctrl+$down resize grow height 20px
bindsym $mod+Ctrl+$up resize shrink height 20px
bindsym $mod+Ctrl+$right resize grow width 20px

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Make the current focus floating
bindsym $mod+Shift+f floating toggle
floating_modifier $mod

# Switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
